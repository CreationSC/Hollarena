<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersInfo.signupuser.SingupActivity1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/upperBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignBottom="@+id/tvback"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/Dark_blue"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvback"
                android:layout_width="52dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/back" />
        </RelativeLayout>

        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/upperBar"
            android:layout_marginTop="180dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="E-mail Address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/etpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etemail"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Pin"
            android:inputType="phone"
            android:padding="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etpin"
            android:layout_marginTop="8dp"
            android:text="@string/pin_text"
            android:textColor="#29a8b6"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/pintext"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:background="@color/Dark_blue"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>